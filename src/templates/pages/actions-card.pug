extends ../index-inner
include ../blocks/mixins/breadcrumbs
include ../blocks/mixins/actions-card

block title
    title Унция — Акции

block content
    .page
        +breadcrumbs([
            {
                link: 'main.html',
                title: 'Главная'
            }
        ], 'Акции')
        h1.h1.page__title Акции
        .page__content
            .container
                .actions
                    .actions__inner
                        .actions__header.indent-b--l
                            h2.h3 Каждую неделю новый сорт чая, на который мы снижаем цену на 20%
                        .actions__tabs.indent-b--xl
                            .tabs
                                .tabs__list(role="tablist")
                                    a.tabs__tab.link(href="actions-sales.html") Скидки и подарки
                                    a.tabs__tab.link.is-active(href="actions-card.html") Карта «Унция»
                        .actions__cards
                            .actions__cards-list
                                .actions__cards-item
                                    +actions-card({
                                        image: 'bonus-card-1.png',
                                        title: 'Золотая карта «Унция»',
                                        value: '3',
                                        rate: 'от 1 500 до 2 999 руб.'
                                    })
                                .actions__cards-item
                                    +actions-card({
                                        image: 'bonus-card-2.png',
                                        title: 'Чёрная карта «Унция»',
                                        value: '10',
                                        rate: 'от 3 000 до 9 999 руб.'
                                    })
                                .actions__cards-item
                                    +actions-card({
                                        image: 'bonus-card-1.png',
                                        title: 'Чёрная карта «Унция»',
                                        value: '15',
                                        rate: 'от 10 000 руб.'
                                    })