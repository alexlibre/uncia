extends ../index-inner
include ../blocks/mixins/breadcrumbs
include ../blocks/mixins/catalog
include ../blocks/mixins/radio-box

block title
    title Унция — Поиск

block content
    .page
        +breadcrumbs([
            {
                link: 'main.html',
                title: 'Главная'
            }
        ], 'Результаты поиска')
        h1.h1.page__title Результаты поиска
        .page__content
            .search-form
                .container
                    form.form
                        .search-form__inner.indent-b--2xl
                            .form__item.indent-b--l
                                span.input.input--view--default.input--width--available
                                    input.input__control(type="search")
                                    button.button.button--view--round-icon.header__search-submit(type="submit")
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none"><path clip-rule="evenodd" d="M7.5 14c3.5899 0 6.5-2.9101 6.5-6.5S11.0899 1 7.5 1 1 3.9101 1 7.5 3.9101 14 7.5 14z" stroke="#fff" stroke-width="1.5"/><path d="M12 12.4167l4.339 4.339" stroke="#fff" stroke-width="1.5" stroke-linecap="square"/></svg>
                            .form__radio-row
                                +radio-box({
                                    name: 'radio-search-cat',
                                    id: 'radio-search-cat-1',
                                    label: 'Каталог',
                                    inputClasses: 'indent-r--2xs',
                                    checked: true
                                })
                                +radio-box({
                                    name: 'radio-search-cat',
                                    id: 'radio-search-cat-2',
                                    label: 'Акции',
                                    inputClasses: 'indent-r--2xs',
                                    disabled: true
                                })
                                +radio-box({
                                    name: 'radio-search-cat',
                                    id: 'radio-search-cat-3',
                                    label: 'Подборки',
                                    inputClasses: 'indent-r--2xs',
                                })
                                +radio-box({
                                    name: 'radio-search-cat',
                                    id: 'radio-search-cat-4',
                                    label: 'Блог',
                                    inputClasses: 'indent-r--2xs',
                                })
                                +radio-box({
                                    name: 'radio-search-cat',
                                    id: 'radio-search-cat-5',
                                    label: 'Библиотека',
                                    inputClasses: 'indent-r--2xs',
                                })
                                
                section.section
                    .container
                        .section__header.indent-b--xl
                            h2.h1 Чай чёрный
                    +catalog({
                        number: 8
                    })
                    button.button--view--link.indent-t--xl.indent-h--a Показать еще 15 <span class="link--view--ghost">из 25<span>