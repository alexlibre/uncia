                    .form__item
                        +input({
                            type: 'tel', 
                            placeholder: 'Телефон', 
                            className: 'input--width--available', 
                            id: 'lk-phone',
                            inputClass: 'js-phone-mask'
                        })
                            label.input__icon(for="lk-phone")
                                <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21"><path d="M5.877 19.742v0H.65v0-5.227 0L14.222.945v0s.685-.666 1.355.004l3.788 3.788c.709.71-.01 1.527-.01 1.527v0z" fill="none" stroke="#e1e1e1" stroke-miterlimit="50" stroke-width="1.3"/><path d="M12.48 2.68l5.228 5.227" fill="none" stroke="#e1e1e1" stroke-miterlimit="50" stroke-width="1.3"/><g><path d="M10.66 4.51l5.227 5.228" fill="none" stroke="#e1e1e1" stroke-miterlimit="50" stroke-width="1.3"/></g><g><path d="M5.88 19.74h14.247" fill="none" stroke="#e1e1e1" stroke-miterlimit="50" stroke-width="1.3"/></g></svg>
                .lk-personal__form-pic
                    .icon-plus.icon-plus--layout--vertical.icon-plus--distribute--center
                        .icon-plus__icon
                        .lk-personal__avatar
                            img.js-file-output(src="../images/content/man2.png", alt="")
                        .icon-plus__block
                        .lk-personal__load
                            input(type="file" name="lkAvatar" accept="image/*" id="lkAvatar" class="input-file")
                            label.side-menu__logout.link-2(for="lkAvatar") Загрузить фото
                .lk-personal__form-submit
                    button.button.button--view--dark(type="submit") Сохранить
            form.lk-personal__form(action="/")
                .lk-personal__form-inputs
                    h3.h3.form__title Изменить пароль
                    .form__item
                        +input({
                            type: 'password', 
                            placeholder: 'Новый пароль', 
                            className: 'input--width--available', 
                            id: 'lk-new-pwd'
                        })
                    .form__item
                        +input({
                            type: 'password', 
                            placeholder: 'Повторить пароль', 
                            className: 'input--width--available', 
                            id: 'lk-repeat-pwd'
                        })
                .lk-personal__form-submit
                    button.button.button--view--dark(type="submit") Изменить
