mixin slide-right(els)
    .slide-right
        .slide-right__content
            .slide-right__number= els.number
            .slide-right__title.h1(data-swiper-parallax-x="-100" data-swiper-parallax-opacity="0")= els.title
            .slide-right__category.h5(data-swiper-parallax-x="-200" data-swiper-parallax-opacity="0")= els.category
            .slide-right__images
                .slide-right__image-back(data-swiper-parallax-x="60")
                    img(src="../images/content/" + els.imgBack)
                .slide-right__image-front
                    img(src="../images/content/" + els.imgFront)
            .slide-right__buttons
                button.button.button--view--dark.button--view--dark-x2
                    .icon-plus
                        .icon-plus__icon.indent-r--s
