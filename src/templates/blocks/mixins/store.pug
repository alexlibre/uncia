mixin store(data)
    .store.js-accordeon-add(class= data.active===true? 'is-active': '' data-id= data.id)
        .store__inner
            .store__main
                h3.store__title.h4= data.title
                .store__row
                    p.store__opened.link-2.link--view--ghost= data.opened
                    .store__metro
                        .icon-plus
