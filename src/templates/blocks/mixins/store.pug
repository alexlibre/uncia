                            .icon-plus__block
                                p.link-2.link--view-ghost= data.metro
                a.store__phone.h4(href= 'tel:' + data.phone)= data.phone
            .store__additional.js-accordeon-collapse
                .store__image.indent-b--l
                    img(src="../images/content/" + data.image, alt=data.title)
                h4.store__subtitle.h4.indent-b--m= data.subtitle
                p.text.indent-b--l= data.text
                .store__buttons
                    a.button.button--view--dark.indent-r--l(href="store-detail.html") Подробно о магазине
                    button.button.button--view--underlink Маршрут